<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/default_bottom"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="0dp"
    android:background="@drawable/button_bg"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/select_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/transparent"
       
        android:drawableTop="@drawable/select_all"
        android:gravity="center_horizontal"
        android:text="@string/select_all"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_small" />
    
     
    <Button
        android:id="@+id/update_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableTop="@drawable/update"
        android:gravity="center_horizontal"
        android:text="@string/maupdate"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_small" />

    <Button
        android:id="@+id/cut_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableTop="@drawable/cut"
        android:text="@string/moveto"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_small" />

    <Button
        android:id="@+id/delet_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:drawableTop="@drawable/delet"
        android:text="@string/deletfile"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_small" />

</LinearLayout>